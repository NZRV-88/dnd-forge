{
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "functions": {
        "api/ping.ts": {
            "runtime": "nodejs18.x"
        },
        "api/name-generator.ts": {
            "runtime": "nodejs18.x"
        },
        "api/advanced-name-generator.ts": {
            "runtime": "nodejs18.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "build": {
        "env": {
            "NODE_VERSION": "18"
        }
    }
}
