{
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "build": {
        "env": {
            "NODE_VERSION": "18"
        }
    }
}
